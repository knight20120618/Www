<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>經典查詢</title>
    <style>
        b {
            color: black;
            font-size: 140%;
        }

        label {
            color: blueviolet;
            font-size: 170%;
            font-weight: bold;
        }

        strong {
            font-size: 140%;
            color: rgb(70, 102, 206);
        }

        header,
        section,
        footer {
            margin: 4%;
        }

        .animated-text {
            font-size: 333%;
            font-weight: bold;
            text-transform: uppercase;
            background: linear-gradient(90deg, green, yellowgreen, yellow);
            background-clip: text;
            -webkit-background-clip: text;
            color: transparent;
            display: inline-block;
            animation: colorChange 4s linear infinite;
            border: 2px dotted brown;
        }

        @keyframes colorChange {
            0% {
                background-position: 0% 50%;
            }

            100% {
                background-position: 100% 50%;
            }
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
</head>

<body background="images/bg.jpeg" style="text-align: center;color: aqua;">
    <header class="alert alert-secondary" role="alert" style="display: flex;">
        <span style="flex: 4;">
            <h1 style="color: black;font-weight: bold;text-align: center;font-size: 40px;">經典查詢</h1>
            <b id="current_date" style="color:  rgb(247, 64, 64);"></b>
        </span>
        <script>
            $("#current_date").html(new Date());
        </script>
        <span style="flex: 1;">
            <i style="font-weight: bold;color: brown;">*關於我們*</i>
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d28971.101701290772!2d121.6855093!3d24.8164113!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3467ef436cd5f00b%3A0xa4f8e6ea38859e1a!2z5L2b5YWJ5aSn5a24!5e0!3m2!1szh-TW!2stw!4v1698841086643!5m2!1szh-TW!2stw"
                width="120" height="90" style="border:2px solid burlywood;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </span>
    </header>
    <main>
        <section id="row">
            <div class="row">
                <div class="btn-group btn-group-lg" role="group" aria-label="Basic outlined example">
                    <a href="/" type="button" class="btn btn-outline-primary"
                        style="width:10%;height:100%;border:2px rgb(252, 252, 252) none;"><b>中華職棒查詢網站</b></a>
                    <a href="/introduce" type="button" class="btn btn-outline-primary"
                        style="width:10%;height:100%;border:2px rgb(252, 252, 252) none;"><b>球團介紹</b></a>
                    <a href="/winner" type="button" class="btn btn-outline-primary"
                        style="width:10%;height:100%;border:2px rgb(252, 252, 252) none;"><b>歷年戰績</b></a>
                    <a href="/champion" type="button" class="btn btn-outline-primary"
                        style="width:10%;height:100%;border:2px rgb(252, 252, 252) none;"><b>預測分析</b></a>
                </div>
            </div>
        </section>
        <section>
            <form action="/sql" method="get" style="display: flex;">
                <label for="RESULT" style="flex: 1;">從西元<input type="text" size="4" name="QUERY" id="RESULT"
                        required>年</label>
                <label for="result" style="flex: 1;">到西元<input type="text" size="4" name="query" id="result"
                        required>年</label>
                <div style="flex: 1;">
                    <input type="submit" value="查詢" style="border-radius:40%;">
                </div>
            </form>
        </section>
        <section>
            <p id="message" style="color: gray;font-weight: bold;">
                <%= message; %>
            </p>
        </section>
        <section>
            <table class="table" style="color: red;">
                <thead>
                    <tr>
                        <th>賽季年份</th>
                        <th>冠軍球隊</th>
                        <th>亞軍球隊</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (results && results.length> 0) {
                        results.forEach(result=> { %>
                        <tr>
                            <td>
                                <%= result.years %>
                            </td>
                            <td>
                                <%= result.noone %>
                            </td>
                            <td>
                                <%= result.notwo %>
                            </td>
                        </tr>
                        <% }) }; %>
                </tbody>
            </table>
        </section>
        <section>
            <table class="table" style="color: blue;">
                <thead>
                    <tr>
                        <th>第一場贏家</th>
                        <th>第二場贏家</th>
                        <th>第三場贏家</th>
                        <th>第四場贏家</th>
                        <th>第五場贏家</th>
                        <th>第六場贏家</th>
                        <th>第七場贏家</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (results && results.length> 0) {
                        results.forEach(result=> { %>
                        <tr>
                            <td>
                                <%= result.gone %>
                            </td>
                            <td>
                                <%= result.gtwo %>
                            </td>
                            <td>
                                <%= result.gthree %>
                            </td>
                            <td>
                                <%= result.gfour %>
                            </td>
                            <td>
                                <%= result.gfive %>
                            </td>
                            <td>
                                <%= result.gsix %>
                            </td>
                            <td>
                                <%= result.gseven %>
                            </td>
                        </tr>
                        <% }) }; %>
                </tbody>
            </table>
        </section>
    </main>
    <footer>
        <div class="animated-text">
            Taiwan Series
        </div>
    </footer>

    <script>
        var myElement = $("#message");
        myElement.css("display", "block");
        myElement.delay(2000).fadeOut();

        var RESULT = document.getElementById('RESULT');
        var result = document.getElementById('result');
        RESULT.addEventListener('change', checkValues);
        result.addEventListener('change', checkValues);

        function checkValues() {
            var RESULT_value = RESULT.value;
            var result_value = result.value;

            if ((RESULT_value > result_value) && RESULT_value !== '' && result_value !== '') {
                alert('輸入的年份區間錯誤');
                location.reload();
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>
</body>

</html>