<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>資料管理</title>
    <style>
        h2 {
            color: red;
        }

        strong {
            color: burlywood;
        }

        nav,
        section {
            margin: 4%;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
</head>

<body background="../images/bg.jpeg" style="text-align: center;color: aqua;">
    <header>
        <nav>
            <form action="/logout" method="get" id="form">
                <input type="submit" value="登出" style="width: 50px;height: 50px;border-radius: 40%;">
            </form>
        </nav>
    </header>
    <main>
        <section>
            <h1 style="display: inline;font-weight: bold;">資料管理</h1>
        </section>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col"><a href="/17">
                            <h2>資料管理</h2>
                        </a></div>
                    <div class="col"><a href="/17teams">
                            <h2>球隊</h2>
                        </a></div>
                    <div class="col"><a href="/17players">
                            <h2>球員</h2>
                        </a></div>
                    <div class="col"><a href="/17games">
                            <h2>比賽</h2>
                        </a></div>
                    <div class="col"><a href="/17sql">
                            <h2>賽程</h2>
                        </a></div>
                </div>
            </div>
        </section>
    </main>
    <footer>
        <img src="../images/cpbl.png" width="50%">
    </footer>

    <script>
        document.getElementById('form').addEventListener("submit", function (event) {    // LOGOUT路由
            event.preventDefault();    // 仿止瀏覽器默認行為

            fetch("/logout", {
                method: "GET",
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = data.redirect;
                    } else {
                        alert("登出失敗");
                    }
                })
                .catch(error => {
                    console.error("404", error);
                });
        });

        preventBeforeUnload = true;    // 預防使用者操作錯誤
        window.addEventListener('beforeunload', function (event) {
            event.preventDefault();

            if (preventBeforeUnload) {
                var CONFIRM = confirm('');
                event.returnValue = CONFIRM;
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>
</body>

</html>